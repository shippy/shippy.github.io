---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import defaultHeroImage from '/public/blog-placeholder-3.jpg';
import { Image } from 'astro:assets';

const { title, description, heroImage } = Astro.props.frontmatter || Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description || ""} />
		<link rel="stylesheet" href="/styles/collection_item.css" />
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-image">
					{heroImage ? <Image width={1020} height={510} src={heroImage} alt="" /> : <Image width={1020} height={510} src={defaultHeroImage} alt="" />}
				</div>

				<div class="prose">
					<div class="title">
						<h1>{title}</h1>
						{description && <p>{description}</p>}
						<hr />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
