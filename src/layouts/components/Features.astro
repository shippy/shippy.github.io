---
import { markdownify } from "@/lib/utils/textConverter";
import FeatureSlider from "../jsx-components/FeatureSlider";
const { features } = Astro.props;
---

<section class="section">
  <div class="container">
    <div class="row">
      <div class="col-md-12 text-center" data-aos="fed-up">
        <div class="section-title">
          <p
            set:html={markdownify(features.sub_title)}
            class="mb-4 text-[0.9rem] uppercase"
          />
          <h2 set:html={markdownify(features.title)} class="title" />
          <p
            set:html={markdownify(features.description)}
            class="text-[.9rem] text-text"
          />
        </div>
        <FeatureSlider features={features} client:load />
      </div>
    </div>
  </div>
</section>
