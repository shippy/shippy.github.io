---
import { Image } from "astro:assets";
import SectionTitle from "../_shared/SectionTitle.astro";
import type { CollectionEntry } from "astro:content";
import defaultHeroImage from "@/assets/default_blog_hero_image.png";

interface Props {
  article: CollectionEntry<"blog">;
  data: {
    title: string;
    subtitle: string;
    link: {
      label: string;
      href: string;
    };
  };
}

const {
  article,
  data: { title, subtitle, link },
} = Astro.props;
---

<section class="section">
  <div class="container">
    <div
      class="flex flex-col gap-8 lg:flex-row-reverse lg:items-center lg:gap-12 lg:px-14"
    >
      <div class="relative z-10 lg:w-1/2">
        {
          article.data.image ? (
            <Image
              src={article.data.image}
              height={1000}
              width={1000}
              alt={title}
              class="w-full max-w-full rounded-2xl lg:h-[500px] lg:object-cover"
            />
          ) : (
            <Image
              src={defaultHeroImage}
              height={1000}
              width={1000}
              alt={title}
              class="w-full max-w-full rounded-2xl lg:h-[500px] lg:object-cover"
            />
          )
        }
      </div>

      <div class="lg:w-1/2" data-aos="fade-up">
        <SectionTitle
          data={{
            title: article.data.title,
            subtitle,
            description: article.data.description,
          }}
          left
        />
        <div class="mt-12 flex flex-wrap items-center gap-3">
          <a
            href={`/blog/${article.slug}`}
            class="btn btn-primary"
            href="#"
            data-aos="fade-up"
            data-aos-easing="ease-in-out"
            data-aos-duration="1000"
            data-aos-once="true"
          >
            View Article
          </a>
          <a
            href={link.href}
            class="btn btn-outline-primary"
            href="#"
            data-aos="fade-up"
            data-aos-easing="ease-in-out"
            data-aos-duration="1000"
            data-aos-once="true"
          >
            {link.label}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
