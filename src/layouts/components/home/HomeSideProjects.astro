---
import type { CollectionEntry } from "astro:content";
import SectionTitle from "../_shared/SectionTitle.astro";
import Image from "astro/components/Image.astro";
import defaultHeroImage from "@/assets/default_blog_hero_image.png";
import Circle from "../_shared/Circle.astro";

interface Props {
  project: CollectionEntry<"side_projects">;
  data: {
    title: string;
    subtitle?: string;
    description: string;
    link: {
      label: string;
      href: string;
    };
  };
}

const {
  project,
  data: { title, subtitle, description, link },
} = Astro.props;
---

<section>
  <div class="container relative text-center">
    <div class="row justify-center">
      <div class="lg:col-12"></div>
      <div class="relative z-30 py-20">
        <SectionTitle
          data={{
            title,
            subtitle,
            description,
          }}
        />
        <div
          data-aos="fade-up"
          data-aos-easing="ease-in-out"
          data-aos-duration="1000"
          data-aos-once="true"
        >
          <div class="relative mx-auto max-w-[800px]">
            <div
              class="absolute left-0 top-0 flex h-full w-full items-end overflow-hidden rounded-2xl bg-gradient-to-b from-transparent to-black/80 p-4 text-white lg:p-8"
            >
              <div
                class="flex w-full flex-col items-start justify-start gap-4 lg:flex-row lg:items-center lg:justify-between"
              >
                <a
                  href={`/side_projects/${project.slug}`}
                  title={project.data.title}
                >
                  <h3
                    class="text-white"
                    data-aos="fade-up"
                    data-aos-easing="ease-in-out"
                    data-aos-duration="1000"
                    data-aos-once="true"
                  >
                    {project.data.title}
                  </h3>
                </a>
                <a
                  href={`/side_projects/${project.slug}`}
                  class="btn btn-primary border-none"
                  data-aos="fade-up"
                  data-aos-easing="ease-in-out"
                  data-aos-duration="1000"
                  data-aos-once="true"
                >
                  View Project
                </a>
              </div>
            </div>
            <Image
              src={project.data.heroImage ?? defaultHeroImage}
              height={1000}
              width={1000}
              alt={title}
              class="mx-auto inline h-[250px] rounded-2xl object-cover lg:h-auto"
            />
          </div>
        </div>

        <div class="mt-12 flex flex-wrap items-center justify-center gap-3">
          <a
            href={link.href}
            class="btn btn-outline-primary"
            href="#"
            data-aos="fade-up"
            data-aos-easing="ease-in-out"
            data-aos-duration="1000"
            data-aos-once="true"
          >
            {link.label}
          </a>
        </div>
      </div>
    </div>
    <div
      class="has-circle has-bg-animate h-full"
      data-aos="fade-in"
      data-aos-once="true"
    >
      <Circle classes={"top-[50px] left-[11%] ratio-32 "} />
      <Circle classes={"top-[29%] left-[3%]ratio-85 fill "} />
      <Circle classes={"top-[45%] left-[22%] ratio-20 fill"} />
      <Circle classes={"bottom-[35%] left-[15%] ratio-47 "} />
      <Circle classes={"bottom-[8%] left-[6%] ratio-62 "} />
      <Circle classes={"top-[100px] right-[12%] ratio-20 fill "} />
      <Circle classes={"top-[30%] right-[2%] ratio-73 "} />
      <Circle classes={"top-[52%] right-[19%] "} />
      <Circle classes={"top-[55%] right-[33%] ratio-20 fill "} />
      <Circle classes={"bottom-[20%] right-[5%] ratio-65 fill "} />
      <svg
        class="text-primary"
        style="opacity:.15"
        width="100%"
        height="100%"
        viewBox="0 0 1401 613"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
        ><path
          d="M2 580C35.1785 462.015 166.359 247.408 425.652 332.866 749.767 439.688 890.318 302.84 946.338 181.583 1002.36 60.3256 1149.41-52.8479 14e2 35.4968"
          stroke="currentcolor"
          stroke-width="4"
          stroke-dasharray="10 10"></path><path
          d="M1398 .999977C1364.87 125.95 1233.88 353.224 974.955 262.722 651.302 149.594 510.953 294.52 455.013 422.935S252.231 671.203 2.00002 577.644"
          stroke="currentcolor"
          stroke-width="4"
          stroke-dasharray="10 10"></path>
      </svg>
    </div>
  </div>
</section>
