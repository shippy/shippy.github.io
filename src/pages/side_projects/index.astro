---
import BaseHead from "@components/BaseHead.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { getCollection } from "astro:content";
import FormattedDate from "@components/FormattedDate.astro";
import { Image } from "astro:assets";
import defaultHeroImage from "@assets/default_other_hero_image.png";
import "@styles/collection_index.css";

const collection = "side_projects";
const posts = (await getCollection(collection))
  .sort((a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf())
  .reverse();
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE + ` | ${collection}`} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <section>
        <ul>
          {
            posts.map((post) => (
              <li>
                <a href={`/${collection}/${post.slug}/`}>
                  {post.data.heroImage ? (
                    <Image
                      width={720}
                      height={360}
                      src={post.data.heroImage}
                      alt=""
                    />
                  ) : (
                    <Image
                      width={720}
                      height={360}
                      src={defaultHeroImage}
                      alt=""
                    />
                  )}
                  <h4 class="title">{post.data.title}</h4>
                  <p class="date">
                    <FormattedDate date={post.data.pubDate} />
                  </p>
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
