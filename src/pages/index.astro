---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import IntroSection from '../components/IntroSection.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<h1>Hi! Sometimes, I...</h1>
			<IntroSection header="...write technical articles" source_collection="blog" />
			<!-- TODO: Should the IntroSection for presentations be separate? -->
			<IntroSection header="...host talks and presentations" source_collection="presentations" />
			<IntroSection header="...work on side projects" source_collection="side_projects" />
		</main>
		<Footer />
	</body>
</html>
